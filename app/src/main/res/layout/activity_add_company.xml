<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="question.tripin.com.tripinquestion.MainActivity">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/company_name" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/contact_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Contact Person" />

        <LinearLayout
            android:id="@+id/add_person_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <include layout="@layout/include_add_person"></include>


        </LinearLayout>

        <TextView
            android:id="@+id/add_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="+Add Person" />

        <LinearLayout
            android:id="@+id/landline_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <include layout="@layout/include_add_landline"></include>

        </LinearLayout>
        <TextView
            android:id="@+id/add_landline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="+Landline Number"
            app:layout_constraintStart_toStartOf="@+id/input_layout_landline_number"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_landline_number" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_company_address"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"

            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/add_landline"
            app:layout_constraintTop_toBottomOf="@+id/add_landline">

            <EditText
                android:id="@+id/input_company_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/company_address" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_city"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"

            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/input_layout_company_address"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_company_address">

            <EditText
                android:id="@+id/input_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/city_town_village" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_state"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/input_layout_city"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_city">

            <EditText
                android:id="@+id/input_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/state" />
        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:id="@+id/city_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/state_container">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/city_inputlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_container"
                android:layout_weight="1">

                <directory.tripin.com.tripindirectory.getcity.general.CityAutoCompleteTextView
                    android:id="@+id/city_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pickup_cities"
                    android:imeOptions="flagNoExtractUi|actionSearch"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingRight="8dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/from_city_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/state_container">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/from_city_inlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/state_container"
                android:layout_weight="1">

                <directory.tripin.com.tripindirectory.getcity.general.CityAutoCompleteTextView
                    android:id="@+id/drop_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/drop_cities"
                    android:imeOptions="flagNoExtractUi|actionSearch"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:paddingRight="8dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/progressBarDestination"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="invisible" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Next"
            android:onClick="submit"
            app:layout_constraintEnd_toEndOf="@+id/input_layout_state"
            app:layout_constraintStart_toStartOf="@+id/input_layout_state"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_state" />


    </LinearLayout>
</ScrollView>