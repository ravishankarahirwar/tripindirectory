<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lbform"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_stroke_bg"
    android:orientation="vertical"

    android:padding="4dp">

    <TextView
        android:id="@+id/newload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_add_circle_black_24dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text=" Post New Load (form)"
        android:textStyle="bold" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/loadpost_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/fab_revert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/chat_in_bg"
            android:contentDescription="TODO"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_swap_horiz_black_24dp" />

        <TextView
            android:id="@+id/select_sourcef"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/chat_in_bg"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/source"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fab_revert"
            app:layout_constraintEnd_toStartOf="@+id/fab_revert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fab_revert" />

        <TextView
            android:id="@+id/select_destinationf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/chat_in_bg"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:gravity="center_vertical"
            android:inputType="textCapCharacters|textMultiLine"
            android:padding="8dp"
            android:text="@string/destination"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fab_revert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/fab_revert"
            app:layout_constraintTop_toTopOf="@+id/fab_revert" />

        <LinearLayout
            android:id="@+id/llinput2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fab_revert">

            <LinearLayout
                android:id="@+id/lltype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/vehicle_type"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnervtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    app:ms_background_selector="@color/blue_grey_50" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llbody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/body_type"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerbtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    app:ms_background_selector="@color/blue_grey_50" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/payload"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:scrollbars="none"
                        android:visibility="gone">

                        <RadioGroup
                            android:id="@+id/search_tag_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:alpha="0.6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/kg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/search_tag_selector"
                                android:button="@null"
                                android:checked="true"
                                android:drawablePadding="2dp"
                                android:elevation="4dp"
                                android:fontFamily="sans-serif-condensed"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="KG"
                                android:textColor="@color/brown_100"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/ton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/search_tag_selector"
                                android:button="@null"
                                android:drawablePadding="2dp"
                                android:elevation="4dp"
                                android:fontFamily="sans-serif-condensed"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="@string/ton"
                                android:textColor="@color/brown_100"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/mt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/search_tag_selector"
                                android:button="@null"
                                android:drawablePadding="2dp"
                                android:elevation="4dp"
                                android:fontFamily="sans-serif-condensed"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="@string/mt"
                                android:textColor="@color/brown_100"
                                android:textSize="10sp"
                                android:textStyle="bold" />


                        </RadioGroup>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="@string/payload_2"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinnerweight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/blue_grey_50"
                        android:gravity="center_horizontal"
                        android:textSize="10sp"
                        app:ms_background_selector="@color/blue_grey_50" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lllength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:text="@string/length"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:scrollbars="none"
                        android:visibility="gone">

                        <RadioGroup
                            android:id="@+id/length_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:alpha="0.6"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/lengthl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/search_tag_selector"
                                android:button="@null"
                                android:checked="true"
                                android:drawablePadding="2dp"
                                android:elevation="4dp"
                                android:fontFamily="sans-serif-condensed"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="@string/kg"
                                android:textColor="@color/brown_100"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/m"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/search_tag_selector"
                                android:button="@null"
                                android:drawablePadding="2dp"
                                android:elevation="4dp"
                                android:fontFamily="sans-serif-condensed"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="@string/ton"
                                android:textColor="@color/brown_100"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/ft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="@drawable/search_tag_selector"
                                android:button="@null"
                                android:drawablePadding="2dp"
                                android:elevation="4dp"
                                android:fontFamily="sans-serif-condensed"
                                android:paddingLeft="8dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingBottom="4dp"
                                android:text="@string/mt"
                                android:textColor="@color/brown_100"
                                android:textSize="10sp"
                                android:textStyle="bold" />


                        </RadioGroup>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/length"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="center_vertical|center_horizontal"
                        android:hint="@string/length_2"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/spinnerlength"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/blue_grey_50"
                        android:gravity="center_horizontal"
                        android:textSize="10sp"

                        app:ms_background_selector="@color/blue_grey_50" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llmaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="@string/material"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/material"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@color/blue_grey_50"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="@string/type_material_specifications"
                    android:inputType="textCapSentences|textMultiLine"
                    android:paddingLeft="5dp"
                    android:paddingTop="16dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="16dp"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/form"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fab_revert">

            <LinearLayout
                android:id="@+id/v_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vehicletype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/chat_in_bg"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/select_vehicle_type"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bodytype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/chat_in_bg"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Select Body Type"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:background="@drawable/chat_in_bg"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:id="@+id/waightll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Truck Length"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/payload_2"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/material_specifications_optional"
                        android:textSize="12sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/other_requirements_optional"
                        android:textSize="12sp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_sreoke_yollo_bg"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/post_now"
            android:textColor="@color/blue_grey_900"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llinput2" />

        <EditText
            android:id="@+id/otherreq"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/type_other_requirement_here"
            android:inputType="textCapSentences|textMultiLine|textPersonName"
            android:textSize="10sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/post"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llinput2" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
