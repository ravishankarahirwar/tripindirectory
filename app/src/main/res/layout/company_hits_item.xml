<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:algolia="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@color/browser_actions_bg_grey">

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="1dp"
            algolia:attribute='@{"mPhotoUrl"}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/mCompanyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:text="Company Name"
            android:textStyle="bold"
            algolia:attribute='@{"mCompanyName"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            algolia:highlighted='@{true}'
            app:layout_constraintStart_toEndOf="@+id/company_logo"
            app:layout_constraintTop_toTopOf="@+id/company_logo" />

        <TextView
            android:id="@+id/mDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:text="Owner Name"
            android:textSize="12sp"
            algolia:attribute='@{"mDisplayName"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            algolia:highlighted='@{true}'
            app:layout_constraintStart_toEndOf="@+id/company_logo"
            app:layout_constraintTop_toBottomOf="@+id/mCompanyName" />

        <TextView
            android:id="@+id/mRMN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:text="RMN"
            android:textSize="12sp"
            algolia:attribute='@{"mRMN"}'
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            algolia:highlighted='@{true}'
            app:layout_constraintStart_toEndOf="@+id/company_logo"
            app:layout_constraintTop_toBottomOf="@+id/mDisplayName" />

    </android.support.constraint.ConstraintLayout>
</layout>