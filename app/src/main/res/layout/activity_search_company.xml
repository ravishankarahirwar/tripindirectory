<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:algolia="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newlookcode.activities.SearchCompanyActivity">

    <LinearLayout
        android:id="@+id/no_result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003">

        <TextView
            android:id="@+id/result_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="No result found! try something else."
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/search_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="20dp"
            android:text="Type a transport company name or company operator/owner name or Registered Mobile Number to get search results."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/scan_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Scan Company QR"
            android:textColor="@color/bg_screen3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/search_company_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_grey_100"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Search...."
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.algolia.instantsearch.ui.views.Hits
        android:id="@+id/c_search_result"
        algolia:itemLayout="@layout/company_hits_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        algolia:resultTemplate="{nbHits} results found in {processingTimeMS} ms"
        algolia:errorTemplate="Error, please try again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_company_text" />

</android.support.constraint.ConstraintLayout>