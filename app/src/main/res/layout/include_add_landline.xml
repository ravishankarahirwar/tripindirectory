<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewRemoveLandline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/ic_remove_circle_black_24dp"/>

    <TextView
        android:id="@+id/countLandline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="1"
        android:visibility="gone"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_landline_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/landline_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/company_landline_number"
            android:inputType="phone"
            android:textSize="14sp"/>

    </android.support.design.widget.TextInputLayout>
    </LinearLayout>

