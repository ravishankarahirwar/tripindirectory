<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="directory.tripin.com.tripindirectory.chatingactivities.ChatHeadsActivity">

    <include
        android:id="@+id/chatheadsactionbar"
        layout="@layout/layout_chatheads_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/chatheadsrl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/chatheadsactionbar"
        android:background="@color/background">

        <TextView
            android:id="@+id/nochats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_chats_yet"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chatheads"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loadloading.json"
            app:lottie_loop="true" />

    </RelativeLayout>

</RelativeLayout>


