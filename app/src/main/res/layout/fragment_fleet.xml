<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/truck_type"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="LCV"
        app:layout_constraintEnd_toStartOf="@+id/i_have"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <android.support.v7.widget.SwitchCompat
        android:id="@+id/i_have"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="On"
        android:textOff="Off"
        android:checked="true"
        android:theme="@style/TruckSwitch"
        app:layout_constraintBottom_toBottomOf="@+id/truck_type"
        app:layout_constraintEnd_toStartOf="@+id/fill_detail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/truck_type"
        app:layout_constraintTop_toTopOf="@+id/truck_type"/>

    <ImageView
        android:id="@+id/fill_detail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/i_have"
        app:layout_constraintTop_toTopOf="@+id/i_have"
        app:srcCompat="@drawable/ic_filter_list_black2_24dp"/>
</android.support.constraint.ConstraintLayout>
